<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2358b7"
    tools:context="${relativePackage}.${activityClass}" >

    <Button 
        android:id="@+id/openActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Video Ad inside ListView"/>
    
    <Button 
        android:id="@+id/openActivityBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@id/openActivityBtn"
        android:text="Video Ad inside ScrollView"/>
    
    <Button 
        android:id="@+id/reloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@id/openActivityBtn2"
        android:text="load/reload Ad"/>
    
</RelativeLayout>
